@model IEnumerable<MoneyDiary365.Models.SavingRecord>
@{
    ViewData["Title"] = "存款紀錄表";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>存款紀錄表</h1>
            <p>
                <a asp-action="Index" class="btn btn-primary">回到首頁</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3>視覺化存款記錄</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        @for (int i = 1; i <= 365; i++)
                        {
                            var record = Model.FirstOrDefault(r => r.SaveDate.DayOfYear == i);
                            var colorClass = record != null ? "bg-success" : "bg-light";
                            var amount = record != null ? $"${record.Amount}" : "";
                            
                            <div class="col-2 col-md-1 mb-2">
                                <div class="card @colorClass text-center" style="height: 60px;">
                                    <div class="card-body p-1">
                                        <small>@i</small>
                                        <div style="font-size: 0.7rem;">@amount</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
