@using Microsoft.AspNetCore.Identity
@inject SignInManager<MoneyDiary365.Models.ApplicationUser> SignInManager
@inject UserManager<MoneyDiary365.Models.ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="nav-link text-white">您好，@User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Welcome", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-white">登出</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">註冊</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">登入</a>
    </li>
}
</ul>
